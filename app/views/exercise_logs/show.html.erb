<% content_for(:title, format_time(@exercise_log)) %>
<p class='pull-right'>
  <%= link_to 'Edit', edit_exercise_log_path(@exercise_log), class: button_class %>
  <%= link_to 'Back', exercise_log_path, class: button_class('primary pull-right') %>
</p>

<h2>
  <%= @exercise_log.exercise_name.titleize %>
</h2>

<p>
  <%= format_exercise_stats(@exercise_log) %>
</p>

<p>
  <%= format_time(@exercise_log) %>
</p>

<p>
  <strong>Describe 1 Rep:</strong><br>
  <%= @exercise_log.exercise.description %>
</p>

<p>
  <strong>Progress notes:</strong><br>
  For: <%= @exercise_log.body_part_name %> | Burn at Set <%= @exercise_log.burn_set %>, Rep <%= @exercise_log.burn_rep %><%= format_resistance(@exercise_log) %><br>
  <%= @exercise_log.progress_note %>
</p>


<!-- Button trigger modal -->
<button type="button" class="btn btn-info btn-wide" data-toggle="modal" data-target="#exampleModal">
  <i class="far fa-stopwatch"></i> Launch Rep Counter
</button>

<%= render partial: 'rep_counter_modal' %>

<script>
  counter(<%= @exercise_log.sets %>, <%= @exercise_log.reps %>, <%= @exercise_log.rep_length %>)
</script>
