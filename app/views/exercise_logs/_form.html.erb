<%= form_with(model: exercise_log, local: true) do |form| %>
  <%= render partial: 'shared/errors', locals: {object: exercise_log} %>

  <div class="field">
    <%= form.label :target_body_part %>
    <%= form.select :target_body_part,
        options_for_select(ExerciseLog::BODY_PARTS, selected: current_user.exercise_logs.last.target_body_part),
        {include_blank: true},
        class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'When' %><br>
    <%= form.datetime_select :datetime_occurred, ampm: true, minute_step: 15, value: Date.today, class: 'form-control' %>
  </div>

  <div class="form-row">
    <div class="col">
      <div class="field">
        <%= form.label :sets %>
        <%= form.number_field :sets, value: last_log(:exercise_logs, :sets), class: 'form-control' %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= form.label :reps %>
        <%= form.number_field :reps, value: last_log(:exercise_logs, :reps), class: 'form-control' %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= form.label 'Exercise' %>
        <%= form.select :exercise_name,
            options_for_select(ExerciseLog::EXERCISES, selected: last_log(:exercise_logs, :exercise_name)),
            {include_blank: true},
            class: 'form-control' %>
      </div>
    </div>
  </div> <!-- row -->

  <div class="form-row">
    <div class="col">
      <div class="field">
        <%= form.label :current_pain_level %>
        <%= form.number_field :current_pain_level, class: 'form-control' %>
      </div>
    </div>

    <div class="col">
      <div class="field">
        <%= form.label :current_pain_frequency %>
        <%= form.select :current_pain_frequency,
            options_for_select(ExerciseLog::PAIN_FREQUENCY, selected: last_log(:exercise_logs, :current_pain_frequency)),
            {include_blank: true},
            class: 'form-control' %>
      </div>
    </div>
  </div> <!-- row -->

  <div class="field">
    <%= form.label :progress_note %>
    <%= form.text_area :progress_note, class: 'form-control' %>
  </div>

  <div class="actions mt-3 mb-3">
    <%= form.submit class: button_class('success') %>
    <%= link_to 'Cancel', exercise_logs_path, class: button_class('primary pull-right') %>
  </div>
<% end %>
