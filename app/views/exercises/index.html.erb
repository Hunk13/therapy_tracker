<%= link_to 'New Exercise', new_exercise_path, class: button_class('primary pull-right') %>

<h1>Exercises</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sets</th>
      <th>Reps</th>
      <th>Rep Length</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= link_to exercise.name, edit_exercise_path(exercise) %></td>
        <td><%= exercise.default_sets %></td>
        <td><%= exercise.default_reps %></td>
        <td><%= exercise.default_rep_length %></td>
        <td><%= exercise.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
