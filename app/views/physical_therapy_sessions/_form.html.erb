<%= form_with(model: physical_therapy_session, local: true) do |form| %>
  <%= render partial: 'shared/errors', locals: {object: physical_therapy_session} %>

  <div class="field">
    <%= form.label 'Target Body Part' %>
    <%= form.collection_select :body_part_id,
    BodyPart.all.order(:name), :id, :name,
    { include_blank: false },
    class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label 'When' %><br>
    <%= form.datetime_select :datetime_occurred, ampm: true, minute_step: 15, value: Date.today, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, placeholder: 'minutes', class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :exercise_notes %>
    <%= form.text_area :exercise_notes, class: 'form-control textarea-large' %>
  </div>

  <div class="field">
    <%= form.label :homework %>
    <%= form.text_area :homework, class: 'form-control textarea-large' %>
  </div>

  <div class="actions mt-3 mb-3">
    <%= form.submit class: button_class('success') %>
    <%= link_to 'Index', physical_therapy_sessions_path, class: button_class('primary pull-right') %>
  </div>
<% end %>
